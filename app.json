{
    "name": "Ultroid Extended - Heroku Edition",
    "description": "Telegram UserBot optimized for Heroku deployment",
    "logo": "https://graph.org/file/031957757a4f6a5191040.jpg",
    "keywords": [
        "telegram",
        "userbot",
        "telethon",
        "heroku",
        "ultroid"
    ],
    "repository": "https://github.com/ThePrateekBhatia/Ultroid",
    "website": "https://github.com/ThePrateekBhatia/Ultroid",
    "success_url": "/",
    "stack": "container",
    "env": {
        "SESSION": {
            "description": "Your Telethon session string. Required to run the bot.",
            "value": "",
            "required": true
        },
        "API_ID": {
            "description": "Telegram API ID from my.telegram.org or @ScrapperRoBot.",
            "value": "",
            "required": true
        },
        "API_HASH": {
            "description": "Telegram API Hash from my.telegram.org or @ScrapperRoBot.",
            "value": "",
            "required": true
        },
        "MONGO_URI": {
            "description": "MongoDB URI for database storage.",
            "value": "",
            "required": true
        },
        "BOT_TOKEN": {
            "description": "Telegram Bot Token from @BotFather.",
            "value": "",
            "required": false
        },
        "HEROKU_API": {
            "description": "Heroku API key from https://dashboard.heroku.com/account.",
            "value": "",
            "required": false
        },
        "HEROKU_APP_NAME": {
            "description": "Your Heroku app name (same as above).",
            "value": "",
            "required": false
        },
        "OWNER_ID": {
            "description": "Your user ID as an integer.",
            "value": "",
            "required": false
        },
        "LOG_CHANNEL": {
            "description": "Telegram channel ID where bot logs should be posted.",
            "value": "",
            "required": false
        }
    },
    "formation": {
        "web": {
            "quantity": 1,
            "size": "basic"
        },
        "worker": {
            "quantity": 1,
            "size": "basic"
        }
    },
    "buildpacks": [
        {
            "url": "heroku/python"
        },
        {
            "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest.git"
        },
        {
            "url": "https://github.com/amivin/aria2-heroku.git"
        }
    ]
}
